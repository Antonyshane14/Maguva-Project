# Environment Variables for Maguva Boutique Management System

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/maguva_boutique
DB_NAME=maguva_boutique

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_2024_maguva
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_2024_maguva
JWT_REFRESH_EXPIRE=7d

# Stripe Configuration (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Maguva Boutique <noreply@maguva.com>"

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_in_production_2024_maguva

# Store Configuration
DEFAULT_STORE_NAME=Maguva Main Store
DEFAULT_STORE_ADDRESS=Your Store Address Here
DEFAULT_STORE_PHONE=+91-9876543210
DEFAULT_STORE_EMAIL=store@maguva.com
DEFAULT_GST_NUMBER=27XXXXX1234X1XX

# Business Configuration
DEFAULT_CURRENCY=INR
DEFAULT_TAX_RATE=18
DEFAULT_LOYALTY_POINTS_RATIO=1

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_LOYALTY_PROGRAM=true
ENABLE_INVENTORY_TRACKING=true
ENABLE_MULTI_STORE=false

# Development Only - Remove in Production
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true
